{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "esnext",
        "target": "es5",
        "sourceMap": true,
        "allowJs": true,
        "listFiles": true,
        "strictNullChecks": false,
        "outDir": "dist",
        "jsx": "react",
        "jsxFactory": "h",
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es7"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}